<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/medium_size">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/assetGroupName"
            android:text="@string/sample_asset_group_name"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/faucetName"
            android:text="@string/sample_faucet_name"
            android:textSize="@dimen/text_small"
            android:textColor="@color/silver_metallic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/faucetRequestBtn"
        android:text="@string/request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
